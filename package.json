{
  "name": "fourteenkilobytes-compiler",
  "version": "1.0.0",
  "description": "Constraint-driven static page compiler with 14KB limit",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:node": "node build-node.mjs",
    "build:browser": "node build-browser.mjs",
    "build:all": "tsc && node build-node.mjs && node build-browser.mjs",
    "test": "node --test dist/compiler.test.js",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  }
}
